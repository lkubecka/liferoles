<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
<property name="connection.driver_class">
org.postgresql.Driver
</property>
<property name="connection.url">
jdbc:postgresql://localhost:5432/appdb
</property>
<property name="connection.username">usr</property>
<property name="connection.password">passwd</property>
<property name="dialect">
org.hibernate.dialect.PostgreSQLDialect
</property>
<!-- <property name="show_sql">true</property> -->
<mapping class="com.liferoles.model.Task"/>
<mapping class="com.liferoles.model.Role"/>
<mapping class="com.liferoles.model.User"/>
<mapping class="com.liferoles.model.PasswordReset"/>
</session-factory>
</hibernate-configuration>